root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.{md,tex}]
max_line_length = 80
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

